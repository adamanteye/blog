#let conf(
  title: str,
  desc: str,
  doc,
) = {
  html.html({
    html.head({
      include "meta.typ"
      html.title()[#title]
      html.meta(
        name: "description",
        content: desc,
      )
      html.link(rel: "stylesheet", href: "../common.css")
    })
    html.body({
      html.header({ include "header.typ" })
      html.main({
        html.article({
          html.h1(title)
          doc
        })
      })
      html.footer({
        html.nav([
          #link(
            "../",
          )[Home]
          \/
          #link(
            "https://github.com/adamanteye/blog",
          )[Source]
          \/
          #link(
            "mailto:adamanteye@disroot.org",
          )[Email]
          \/
          #link(
            "../atom.xml",
          )[Feed]
        ])

        [Generated by *typst* and *Makefile*]
      })
    })
  })
}
