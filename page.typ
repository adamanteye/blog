#let conf(
  title: str,
  desc: str,
  doc,
) = {
  html.html({
    html.head({
      html.title(title + " - adamanteye")
      html.meta(
        name: "description",
        content: desc,
      )
      include "meta.typ"
      html.link(rel: "stylesheet", href: "../common.css")
    })
    html.body({
      html.header({ include "header.typ" })
      html.main({
        html.article({
          html.h1(title)
          doc
        })
      })
      html.footer([
        #link(
          "../",
        )[Home]
        \/
        #link(
          "https://github.com/adamanteye/blog",
        )[Source]
        \/
        #link(
          "mailto:adamanteye@disroot.org",
        )[Email]
        \/
        #link(
          "../atom.xml",
        )[Feed]

        Generated by *typst* and *Makefile*
      ])
    })
  })
}
